.sort-content{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.search-box{
  width: 100%;
  height: 80rpx;
  border: 1px solid #ececec;
  border-left: none;
  border-right: none;
  background-color: #f2f2f2;
  position: fixed;
}
.search{
  width: 80%;
  height: 60rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
  background-color: #fff;
  text-align: center;
}
.search>image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-top: 13rpx;
}
.search>text{
  font-size: 28rpx;
  color: #bfbfbf;
  vertical-align: 10rpx;
}
.sort-item{
  width: 100%;
  height: 100%;
  margin-top: 85rpx;
  overflow: hidden;
}
.left-item{
  float: left;
  width: 160rpx;
  height: 100%;
  overflow-y: scroll;
  background-color: #f2f2f2;
}
.left-item text{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  width: 100%;
  text-align: center;
}
.left-item text:first-child{
  margin-top: 30rpx;
}
.left-item text:last-child{
  margin-bottom: 20rpx;
}

.right-item{
  float: right;
  width: 70%;
  height: 300px;
  margin-right: 28rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  height: 100%;
  overflow-y: scroll;
}
page{
  height: 100%;
}
.item-recom{
  width: 150rpx;
  height: 222rpx;
  margin-top: 30rpx;
}
.item-recom image{
  width: 100%;
  height: 150rpx;
  border-radius: 6rpx;
}
.item-recom text{
  display: block;
  text-align: center;
  margin-top: 10rpx;
  font-size: 24rpx;
  height: 56rpx;
  line-height: 30rpx;
  text-overflow: hidden;
  overflow: hidden;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.active{
  color: #cf2c2c;
  background-color: #fff;
}