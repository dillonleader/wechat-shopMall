.shopcat-content{
  background-color: #f2f2f2;
}
.none-shoppcat{
  position:relative;
  width: 100%;
  height: 600rpx;
  text-align: center;
}
.posi-item{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400rpx;
  height: auto;
}
.none-shoppcat image{
  width: 200rpx;
  height: 200rpx;
}
.none-shoppcat text{
  display: block;
  text-align: center;
  padding-top: 10rpx;
  font-size: 30rpx;
}
/* 推荐 */
.recommend{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  overflow: hidden;
}
.info{
  width: 350rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10px #cacaca;
  padding-bottom: 10rpx;
}
.pics{
  width: 100%;
  height: 290rpx;
}
.price{
  color: #cf2c2c;
  font-size: 12px;
  font-weight: bold;
  padding-left: 10rpx;
}
.title{
  font-size: 24rpx;
  color: #333;
  height: 56rpx;
  line-height: 30rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 12rpx;
}
.shoppCat{
   width: 30rpx;
   height: 30rpx;
   float: right;
   padding-right: 10px;
}
.price{
  padding-bottom: 10rpx;
}
.recomm-logo{
  width: 95%;
  height: 70rpx;
  margin: 0 auto;
  /* margin-bottom: 30rpx; */
}
.recomm-logo view,.recomm-logo text{
  display: block;
  float: left;
}
.recomm-logo view{
  display: block;
  width: 36%;
  background-color: #cacaca;
  height: 2rpx;
  margin-top: 35rpx;
}
.recomm-logo text{
  font-size: 28rpx;
  color: #cacaca;
  margin: 0 24rpx;
  margin-top: 10px;
}
/* 购物车列表 */
.shoppCatDetails{
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.opera-posi{
  width: 100%;
  margin: auto;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 10rpx 0;
  border-bottom-right-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}
.opera{
  padding-left: 15rpx;
}
.opera::after{
  content: '';
  display: block;
  clear: both;
}
.opera image{
  width: 40rpx;
  height: 40rpx;
}
.opera text{
  display: block;
  float: right;
  width: 220rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  
}
.posi{
  padding-right: 40rpx;
  font-size: 28rpx;
}
.shop-list{
  width: 100%;
  height: auto;
}
.shop-items{
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-top: 30rpx;
  border-radius: 20rpx;
}
.check{
  padding: 0 15rpx 0 20rpx;
}
.shop-details{
  width: 85%;
  height: auto;
  padding-bottom: 40rpx;
}
.store{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.shop-store image{
  width: 40rpx;
  height: 40rpx;
}
.shop-store text{
  font-size: 26rpx;
  font-weight: 700;
  vertical-align: 11rpx;
  padding-left: 6rpx;
}
.freight image{
  width: 26rpx;
  height: 26rpx;
}
.freight text{
  font-size: 24rpx;
  color: #c9c7c7;
  vertical-align: 5rpx;
  padding-left: 6rpx;
}
.details-txt{
  display: flex;
  justify-content: space-between;
}
.deta-price{
  width: 370rpx;
  height: 205rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 5rpx #ccc;
}
.rh-details{
  padding-left: 30rpx;
}
.rh-title{
  font-size: 24rpx;
  height: 70rpx;
  line-height: 33rpx;
  overflow: hidden;
  text-overflow: ellipsis;

}
.catsType{
 overflow: hidden;
 white-space: nowrap;
}
.catsType>text{
  width: auto;
  margin-top: 4rpx;
  font-size: 22rpx;
  background-color: #e9e9e9;
  color: #666;
  padding: 10rpx 20rpx;
  line-height: 25rpx;
  border-radius: 30rpx;
}
.place{
  margin-top: 18rpx;
}
.price-addSub{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.cat-price{
  color: #f8382e;
  font-weight: 700;
  margin-top: 10rpx;
}
.cat-price text:first-child{
  font-size: 22rpx;
  letter-spacing: -3rpx;
}
.cat-price text:last-child{
  font-size: 38rpx;
  vertical-align: -5rpx;
}

.add-sub {
  margin-top: -16rpx;
  width: 196rpx;
  height: 50rpx;
  border: 2rpx solid #e7e7e7;
  border-radius: 8rpx;
}

.sub-num,
.shopp-num {
  float: left;
}

.add-sub::after {
  content: '';
  display: block;
  clear: both;
}

.sub-num,
.add-num {
  width: 70rpx;
  height: 100%;
  background-color: #e9e9e9;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
}

.shopp-num {
  line-height: 50rpx;
  width: 59rpx;
  text-align: center;
  overflow: hidden;
}

.add-num {
  float: right;
}
checkbox{
  transform: scale(0.6,0.6);
}
.purchase{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 105rpx;
  background-color:#fff;
  border: 2rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
checkbox-group{
  position: relative;
  margin-left: 20rpx;
}
label{
  display: block;
  position: absolute;
  left: 47rpx;
  width: 62rpx;
  font-size: 26rpx;
  top: 50%;
  transform: translate(0,-50%);
}
.settlement{
    width: 70%;
   display: flex;
   align-items: center;
   justify-content: flex-end;
}
.total{
  font-size: 26rpx;
}
.total-price text{
  color:#000;
  font-size: 28rpx;
  font-weight: bold;
}
.accound{
  width: 230rpx;
  height: 75rpx;
  line-height: 75rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #f8382e;
  text-align: center;
  border-radius: 50rpx;
  margin: 0 20rpx 0 15rpx;
}