page,.search-content{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.search-box{
  width: 95%;
  height: 60rpx;
  margin: auto;
  left: 50%;
  transform: translate(-50%, 0);
  position: fixed;
}
.search{
  float: left;
  width: 85%;
  height: 60rpx;
  border-radius: 6rpx;
  border: 1px solid #dddddd;
}
.search>image{
  float: left;
  display: block;
  margin: 15rpx 0 0 5rpx;
  width: 35rpx;
  height: 35rpx;
}
.search>input{
  margin-top: 10rpx;
margin-left: 8rpx;
width: 91%;
  float: left;
  font-size: 24rpx;
}
.cancel{
  display: block;
  float: right;
  color: #cf2c2c;
  font-size: 28rpx;
  line-height: 67rpx;
  margin-right: 32rpx;
}
.search-item{
  display: block;
  width: 100%;
  height: auto;
  margin: auto;
  margin-top: 100rpx;
}
.item-list{
  overflow: hidden;
  height: auto;
  margin-bottom: 30rpx;
}
.item-list>image,.item-info{
  float: left;
}
.item-list>image{
  display: block;
  width: 260rpx;
  height: 260rpx;
  margin-left: 18rpx;
  border: 2rpx solid #eee;
}
.item-info{
  width: 58%;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #eee;
}
.title{
  display: block;
  font-size: 26rpx;
  padding-right: 6rpx;
  height: 75rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.price{
  display: block;
  line-height: 65rpx;
  height: 65rpx;
}
.price text{
  color: #f8382e;
  font-weight: 700;
}
.price text:first-child{
  font-size: 24rpx;
}
.price text:last-child{
  font-size: 40rpx;
}
.address{
  font-size: 26rpx;
  color: #666;
  padding-bottom: 9rpx;
}
.shopp-type{
  color: #a5a5a5;
  font-size: 24rpx;
  line-height: 35rpx;
}
.shop{
  line-height: 51rpx;
  overflow: hidden;
}
.shop text,.shop view{
  float: left;
  font-size: 24rpx;
}
.shop text{
  display: block;
  color: #a5a5a5;
}
.shop view{
  margin-left: 15rpx;
  color: #222;
}
.notYet{
  width: 300rpx;
  height: 300rpx;
  margin: 20% auto;
  text-align: center;
}
.notYet image{
  width: 100rpx;
  height: 100rpx;
  margin: auto;
}
.notYet text{
  display: block;
  font-size: 26rpx;
  padding-top: 20rpx;
  color: #cdcdcd;
}
